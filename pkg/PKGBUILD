pkgname=photobooth
pkgver=0.0.1
pkgrel=1
pkgdesc=
arch=("armv6h")
url=""
license=("MIT")
depends=("python" "python-pip")

install=${pkgname}.install

source=("https://vertigo.canopus.uberspace.de/packages/${pkgname}-${pkgver}.tar.xz")
sha256sums=('9802697468149eb290cef5287393f76d26c4fec7ac9f09180c748721623756e9')

build() {
	true
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	#install "${pkgname}.service" "${pkgdir}/lib/systemd/system/"
	install -D "${pkgname}" "${pkgdir}/opt/${pkgname}"
}
